{
  "name": "Page Text Copy",
  "description": "On the press of a button you copy the text that you want with XPath",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "options_page": "/config/build/index.html",
  "action": {
    "default_icon": {
      "16": "/images/image16.png",
      "32": "/images/image32.png",
      "48": "/images/image48.png",
      "128": "/images/image128.png"
    }
  },
  "icons": {
    "16": "/images/image16.png",
    "32": "/images/image32.png",
    "48": "/images/image48.png",
    "128": "/images/image128.png"
  }
}